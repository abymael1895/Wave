<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Criadores">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/voltr"
            style="@style/dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:text="Criadores"
                android:textColor="@android:color/holo_purple"
                style="@style/textdark"
                android:textStyle="normal"
                android:textSize="26sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/devs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/layoutDevs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:ignore="DisableBaselineAlignment,MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOrien"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="100dp"
                android:elevation="15dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/abymas"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textOrien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_purple"
                android:text="Abymas Renner"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoOrien"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="100dp"
                android:elevation="15dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/thomas"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textCoOrien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_purple"
                android:text="Thanos Turbante"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="20dp"
                />


            <TextView
                android:id="@+id/textdeclaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_purple"
                android:text="Este aplicativo é uma ideia idiota feita por dois maluicos tentando fazer algo de util, mentira, é só uma maluquice qualquer, não leve a sério, por favor :)"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="45dp"
                />

            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
